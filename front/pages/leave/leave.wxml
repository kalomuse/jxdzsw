<!--pages/leave/leave.wxml-->
<!--contactus.wxml-->
<view class="container">
  <view class="leave-wrap">  
    <form>
      <view class="item">
        <label>手机：</label>
        <input bindinput="bindMobile" type="text" class="txt" />
      </view>
      <view class="item">
        <label>邮箱：</label>
        <input bindinput="bindEmail" type="text" class="txt" />
      </view>
      <view class="item">
        <label>留言:</label>
        <textarea bindinput="bindContent" class="txtarea" />
      </view>
      <button bindtap="bindMessage" form-type="submit" class="sub-btn">提 交</button>
    </form>
  </view>
  <view class="footer_h"></view>
  <view class="footer">
    <navigator url="../index/index" hover-class="navigator-hover">
      <view class="iconfont icon-shouye"></view>
      <text>首页</text>
    </navigator>
    <navigator url="../product/product" hover-class="navigator-hover">
      <view class="iconfont icon-chanpin"></view>
      <text>产品中心</text>
    </navigator>
    <navigator url="../news/news" hover-class="navigator-hover">
      <view class="iconfont icon-icon"></view>
      <text> 新闻资讯</text>
    </navigator>
    <navigator url="../contactus/contactus" hover-class="navigator-hover">
      <view class="iconfont icon-lianxi"></view>
      <text>公司介绍</text>
    </navigator>
    <navigator class="current" url="../leave/leave" hover-class="navigator-hover">
      <view class="iconfont icon-liuyan"></view>
      <text>留言</text>
    </navigator>
  </view>
</view>
