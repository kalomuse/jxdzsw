/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}
.index-nav{
   column-count:4;
   padding: 10rpx 10rpx 20rpx 10rpx;
   background: #fff;
   margin-bottom: 10px;
}
.index-nav-item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.index-nav-img {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.index-nav-name{
  font-size: 24rpx;
  color: #333;
}
.monthmain{
  width: 100%;
  background: #fff;
  margin-bottom: 10px;
}
.common-tit{
  border-bottom: 1px solid #E6E6E6;
  padding: 20rpx 28rpx;
}
.common-tit text{
  font-size: 28rpx;
  padding-left: 10px;
  border-left: 10rpx solid #1F98EE;
}
.more{
  font-size: 33rpx;
  text-align:center;
  border-bottom: 1px solid #E6E6E6;
  padding: 20rpx 28rpx;
}
.monthmain-wrap{
  padding: 30rpx 30rpx;
}
.monthmain-wrap .item{
  float: left;
  width: 40%;
  margin: 0 5%;
  overflow: hidden;
  position: relative;
  margin-bottom: 25px;
}
.monthmain-wrap .item .img{
  display: block;
  width: 100%;
  height: 200rpx;
  border-radius: 18px;
}
.monthmain-wrap .item .name{
  width: 100%;
  height: 24px;
  padding:0 12px;
  overflow: hidden;
  border-radius: 0 0 18px 18px;
  position: absolute;
  left: 0;
  bottom: 0;
  text-align: center;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #fff;
  line-height: 24px;
  filter:progid:DXImageTransform.Microsoft.gradient(enabled='true',startColorstr='#7F000000', endColorstr='#7F000000');
  background:rgba(0,0,0,0.5);
}
.Recommend{
  width: 100%;
  background: #fff;
  margin-bottom: 10px;
}
.Recommend-wrap .item{
  border-bottom: 1px solid #E6E6E6;
  padding: 10px 12px;
  box-sizing: border-box;
}
.Recommend-wrap .item .img{
  float: left;
  width: 110px;
  height: 70px;
}
.Recommend-wrap .item .info{
  display: block;
  margin-left: 120px;
  height: 70px;
  overflow: hidden;
}
.Recommend-wrap .item .info .tit{
  display: block;
  font-size: 16px;
  line-height: 30px;
  padding-bottom: 2px;
  text-overflow: ellipsis;
  overflow: hidden;
}
.Recommend-wrap .item .info .view{
  font-size: 13px;
  color: #777;
  line-height: 17px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.newslist{
  width: 100%;
}
.newslist .item{
  padding: 10px 12px;
  box-sizing: border-box;
  background: #fff;
  margin-top: 10px;
  border-bottom: 1px solid #E6E6E6;
}
.newslist .item .img{
  float: left;
  width: 110px;
  height: 70px;
}
.newslist .item .info{
  display: block;
  overflow: hidden;
}
.newslist .item .info .tit{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 16px;
  line-height: 22px;
  padding-bottom: 4px;
}
.newslist .item .info .time{
  display: block;
  font-size: 13px;
  color: #777;
  line-height: 20px;
  text-overflow: ellipsis;
  overflow: hidden;
}

































